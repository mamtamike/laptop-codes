package AutomationDemo1;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

import io.github.bonigarcia.wdm.WebDriverManager;

public class SelectDropDown {
	public static void main(String[] args) throws InterruptedException {
		WebDriverManager.chromedriver().setup();
		ChromeDriver driver=new ChromeDriver();
		driver.manage().window().maximize();
		driver.get("https://www.sugarcrm.com/au/request-demo/");
		/*driver.findElement(By.xpath("//*[@id=\"CybotCookiebotDialogBodyLevelButtonLevelOptinAllowAll\"]")).click(); //accept cookies
		WebElement ddrop=driver.findElement(By.name("input_8"));
		Select select=new Select(ddrop);
		select.selectByIndex(1);
		Thread.sleep(2000);
		select.selectByValue("level4");
		Thread.sleep(2000);
		select.selectByVisibleText("2,501 - 5,000 employees");*/
		
		driver.navigate().to("https://codepen.io/savrajdutta/pen/poxgqLE");
		WebElement ddrop =driver.findElement(By.xpath("/html/body/div/div/div/button"));
		Select select=new Select(ddrop);
		select.selectByVisibleText("2");
		select.selectByVisibleText("4");
		select.selectByVisibleText("3");
		List<WebElement> allListItems= select.getAllSelectedOptions();
		System.out.println(allListItems.size());
	}
	

}
